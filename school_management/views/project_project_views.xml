<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="peoject_form_view" model="ir.ui.view">
        <field name="name">project.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options_active']" position="after">
                <div>
                    <label class="oe_inline" for="create_date" string="Create date: "/>
                    <field class="oe_inline oe_input_align" name="create_date"/>
                </div>
                <div>
                    <label class="oe_inline" for="end_day" string="End date: "/>
                    <field class="oe_inline oe_input_align" name="end_day"/>
                </div>
                <div>
                    <label class="oe_inline" for="number_of_days" string="Days: "/>
                    <field class="oe_inline oe_input_align" name="number_of_days"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
