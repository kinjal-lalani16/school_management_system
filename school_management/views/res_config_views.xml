<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Sales']/div" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane ">
                            <field name="condition"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="condition"/>
                            <div class="text-muted">
                               Condition
                            </div>
                        </div>
                        <div attrs="{'invisible': [('condition', '=', False)]}">
                            <field name="team_condition" class="o_light_label"
                             widget="html"
                             attrs="{'required': [('condition', '=', True)]}"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="live_chat_install_setting">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <div class="row">
                                    <label class="col-md-3 o_light_label"
                                        string="Student" for="student_id"/>
                                    <field name="student_id" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
